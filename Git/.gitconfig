[user]
	name = Jacques Buitendag
	email = jacques.buitendag@gmail.com
[push]
	default = simple
[core]
	autocrlf = input
[alias]
l = log --abbrev-commit --decorate --date=iso --format=format:'%C(bold blue)%h%C(reset) %C(bold green)%ad%x08%x08%x08%x08%x08%x08%C(reset) %C(white)%s%C(reset)%C(dim white) - %C(reset)%C(red)%an%C(reset)%C(bold yellow)%d%C(reset)'
lg = log --graph --abbrev-commit --decorate --date=iso --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset)%C(dim white) - %C(reset)%C(red)%an%C(reset)%C(bold yellow)%d%C(reset)' --all
a = add --all
s = status
d = diff --cached
